@model IEnumerable<CryptProject.Models.CryptValue>

@{
    ViewBag.Title = "Index";
    
}


<table class="table">
    <tr>
        <th>
            @Html.ActionLink("#", "Index", new { value = "id" }, new { @class = "clear-column" })
        </th>
        <th>
            @Html.ActionLink("NAME", "Index", new { value = "name" }, new { @class = "clear-column" })
        </th>
        <th>
            @Html.ActionLink("SYMBOL", "Index", new { value = "start" }, new { @class = "clear-column" })
        </th>
        <th>
            @Html.ActionLink("VOLUME CHANGE 24H", "Index", new { value = "completion" }, new { @class = "clear-column" })
        </th>
        <th>
            @Html.ActionLink("MARKET CAP", "Index", new { value = "status" }, new { @class = "clear-column" })
        </th>
        <th>
            @Html.ActionLink("LAST UPDATE", "Index", new { value = "priroty" }, new { @class = "clear-column" })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>@item.id</td>
            <td>
                <img src="@item.logo" alt="logo" />
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.symbol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.volume_change_24h)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.market_cap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.last_update)
            </td>

        </tr>
    }

</table>
<style>
    img{
        width:54px;
        height:54px;
        padding:5px;
        margin:5px;
    }
</style>